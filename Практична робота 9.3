#include <iostream>
using namespace std;
int main()
{
	int value = 10;
	/* перший рівень непрямої адресації – доступ до
	значення змінної здійснюється через розіменування
	вказівника *ptr1 */
	int* ptr1 = &value;
	/* другий рівень непрямої адресації – вказівник, який
	вказує на інший вказівник */
	int** ptr2 = &ptr1;
	*ptr1 += 5; // результат: value = 10 + 5 = 15
	cout << "value = 10 + 5 = " << *ptr1 << endl;
	**ptr2 += 3; // результат: value = 15 + 3 = 18
	cout << "value = 15 + 3 = " << **ptr2 << endl;
}
