#include <iostream>
using namespace std;
void main()
{
    int a[10], i,  n = 0, p = 0;
    for (i = 0; i < 10; i++)
    {
        printf("Enter number %d:", i + 1);
        cin >> a[i];
    }
    for (i = 0; i < 10; i++)
    {
        if (a[i] > 0)
        {
            p++;
        }
        if (a[i] < 0)
        {
            n++;
        }
    }
    printf("\nPositive numbers = %d", p);
    printf("\nNegative numbers = %d", n);
} 
