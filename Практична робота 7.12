#include <iostream>
using namespace std;
void main()
{
    char str [30];
    int i = 0;
    printf("\nEnter The String : ");
    cin >> str;
    while (str[i]!= '\0')
    {
        i++;
    }
   
    printf("\nReverse String : ");
    while (i >= 0)
    {
        printf("%c", str[i]);
        i--;
    }
}
